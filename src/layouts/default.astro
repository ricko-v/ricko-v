---
import "../styles/global.css";
import Header from "../components/header.astro";
import BottomNav from "../components/bottom-nav.astro";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>@rickoveriyanto - Personal Website</title>
		<meta
			name="description"
			content="Perkenalkan, saya Ricko Veriyanto, seorang Frontend Developer berusia 21 tahun
			yang berdomisili di Colomadu, Karanganyar. Saya memiliki ketertarikan yang
			kuat di bidang teknologi..."
		/>
		<script is:inline>
			if (
				localStorage.theme === "dark" ||
				(!("theme" in localStorage) &&
					window.matchMedia("(prefers-color-scheme: dark)").matches)
			) {
				document.documentElement.classList.add("dark");
			} else {
				document.documentElement.classList.remove("dark");
			}
		</script>
	</head>
	<body
		class="transition-colors duration-300 bg-white dark:bg-neutral-900 text-gray-900 dark:text-gray-100"
	>
		<div class="container mx-auto max-w-4xl relative min-h-screen pb-26">
			<header class="p-3">
				<Header />
			</header>
			<main class="mt-10 px-3">
				<slot />
			</main>
		</div>
		<BottomNav />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
